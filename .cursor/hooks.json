{
    "version": 1,
    "hooks": {
        "beforeShellExecution": [
            {
                "command": "jq -r '\"\\(.command) - \\(.tool_input.description // \"No description\")\"' >> ~/agent.log"

            }
            ,

        {
            "command": "./hooks/block-git.sh"
        }
        ],
        "beforeMCPExecution": [
            {
                "command": "./hooks/audit.sh"
            }
        ],
        "beforeReadFile": [
            {
                "command": "./hooks/redact-secrets.sh"
            }
        ],
        "afterFileEdit": [
            {
                "command": "./hooks/audit.sh"
            }
        ],
        "beforeSubmitPrompt": [
            {
                "command": "./hooks/block-secret-name.sh"
            },
            {
               "command": "../test.sh"
            },
            {
                "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/agent.log"

            }
        ],
        "stop": [
            {
                "command": "./hooks/audit.sh"
            }
        ]
    }
}